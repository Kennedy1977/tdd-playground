{
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": { "ecmaVersion": 2021 },
  "env": { "node": true, "jest": true },
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "comma-dangle": ["error", "always-multiline"],
    "prettier/prettier": "error"
  }
}
